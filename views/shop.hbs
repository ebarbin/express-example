<main class="main">
    {{#if hasProducts }}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="product-item">
                        <h1 class="product-title">
                            {{this.title}}
                        </h1>
                    </header>
                    <div class="card-image">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
                    </div>
                    <div class="card-content">
                        <h2 class="product-price">$19.9</h2>
                        <p class="product-description">A very interesting book about so many...</p>
                    </div>
                    <div class="card-actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            {{/each}}
        </div>
    {{else}}
        <h1>No Products!</h1>
    {{/if}}
</main>